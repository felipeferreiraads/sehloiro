 /* width */
::-webkit-scrollbar {
  height: 5px
}

/* Track */
::-webkit-scrollbar-track {
  background: $color.gray-light;
}

/* Handle */
::-webkit-scrollbar-thumb {
  background:  $color.primary;
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: darken($color.primary, 15%)
}