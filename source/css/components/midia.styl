.main-media
    padding: 100px 0 100px 100px
    .top
        width: 100%
        max-width 1280px
        padding: 0 20px 0 0
    .grid
        display flex
        justify-content: space-between
    .logo
        display flex
        img
            width: 300px
        span
            font-size: 35px
            font-style: italic
            letter-spacing: 5px
            margin-left: 5px
    a.button
        display inline-block
        line-height: 50px
        padding: 0 15px
        background: $color.text
        color white
        font-weight: 800
        text-transform: uppercase
        transition: .2s
        &:hover
            opacity: .85
        span
            &:first-child
                font-size: 20px
                margin-right: 5px
    p
        font-size: 25px
        margin-top: 30px
        font-style: italic

.media-posts
    width: auto
    overflow-x: scroll
    overflow-y: hidden
    white-space: nowrap
    margin-top 40px
    .column
        display inline-block
        margin-right: 50px

.card-media
    width: 400px
    display block
    white-space: normal
    margin-bottom: 20px
    h3
        font-size: 22px
        color: $color.primary
        font-weight: 800
        text-transform: uppercase
        max-width: 400px
        margin-bottom: 10px
        line-height: 1.4
    figure
        width: 100%
        height: 110px
        img
            width: 100%
            height: 100%
            object-fit: cover
            object-position: center