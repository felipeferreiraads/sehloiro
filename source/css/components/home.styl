.main-home
    height: 100vh
    display flex
    flex-direction: column
    justify-content: center
    align-items: center
    figure
        width 50%
        padding-bottom: 10vh
        margin-bottom: 10vh
        position relative
        &::after
            content: ''
            width 30%
            height 1px
            background: $color.gray-medium
            position: absolute
            bottom: 0
            left: 50%
            transform: translateX(-50%)
        img
            width 100%
    h1
        font-size: 25px
        font-weight: 400
        text-align: center
        margin-bottom: 10vh
        text-transform: uppercase
        letter-spacing: 5px
    p
        font-size: 25px
        color: $color.primary
        text-align: center
        max-width 400px
        text-transform: uppercase
        font-style: italic
        letter-spacing: 5px
        line-height: 1.2
        margin-bottom: 10vh
        &:first-line
            font-weight: 800
            font-style: normal
    .nav-home
        a
            display inline-block
            line-height: 50px
            padding: 0 20px
            background: $color.gray-light
            font-size: 20px
            font-style: italic
            &:not(:last-child)
                margin-right: 10px